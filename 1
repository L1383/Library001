  <title>کتابخانه من</title>
  <style>
    body {
      font-family: sans-serif;
      direction: rtl;
      background: #f9f9f9;
      padding: 1rem;
    }
    h1, h2 {
      text-align: center;
      color: #007bff;
    }
    input, select, button {
      margin-top: 0.5rem;
      padding: 0.5rem;
      width: 100%;
      box-sizing: border-box;
      border-radius: 8px;
      border: 1px solid #ccc;
    }
    button {
      background-color: #007bff;
      color: white;
      cursor: pointer;
      border: none;
    }
    button:hover {
      background-color: #0056b3;
    }
    .novel, .auth {
      background: white;
      padding: 1rem;
      border-radius: 12px;
      margin-bottom: 1rem;
    }
    .novel-list {
      margin-top: 1rem;
    }
    .novel-item {
      background: #e8f0fe;
      border-radius: 10px;
      padding: 1rem;
      margin-bottom: 1rem;
    }
